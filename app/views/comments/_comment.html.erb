<%= div_for(comment) do %>
	<div class="comments_wrapper clearfix">
		<div class="pull-left">
			<p class="lead"><%= comment.body %></p>
			<p><small><strong><%= comment.user.name %> </strong><%= time_ago_in_words(comment.created_at) %> назад</small></p>
		</div>
		<div class="btn-group pull-right">
			<% if comment.user == current_user -%>
				<%= link_to 'Удалить', comment, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-sm btn-default" %>
			<% end %>
		</div>
	</div>
<% end %>